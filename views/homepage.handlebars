<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="card">
  <div class="card-header">
    <a href="/blog/{{blog.id}}">{{blog.title}}</a>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> {{blog.content}}</p>
      <footer class="blockquote-footer">Created by {{blog.user.name}} on {{format_date blog.date_created}}</footer>
    </blockquote>
  </div>
</div>
